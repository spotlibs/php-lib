{
    "name": "brispot/php-lib",
    "description": "PHP library for support brispot microservice development",
    "keywords": ["brispot", "microservice", "php-lib"],
    "license": "MIT",
    "type": "library",
    "require": {
        "php": "^7.3|^8.0",
        "laravel/lumen-framework": "^8.0",
        "jobcloud/php-kafka-lib": "^1.7",
        "flix-tech/avro-serde-php": "^1.7"
    },
    "autoload": {
        "psr-4": {
            "Spotlibs\\PhpLib\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "phpunit/phpunit": "9.6.20",
        "rregeer/phpunit-coverage-check": "^0.3.1"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --configuration phpunit.xml --coverage-clover test-reports/cov.xml && php prepare-coverage-report.php && ./vendor/bin/coverage-check test-reports/cov.xml 40"
    }
}
