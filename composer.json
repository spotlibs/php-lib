{
    "name": "brispot/php-lib",
    "version": "v0.0.3",
    "description": "PHP library for support brispot microservice development",
    "keywords": ["brispot", "microservice", "php-lib"],
    "license": "MIT",
    "type": "library",
    "require": {
        "php": "^8.0",
        "laravel/lumen-framework": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Brispot\\PhpLib\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "phpunit/phpunit": "9.6.20"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --coverage-text --colors",
        "test-with-report": "./vendor/bin/phpunit --configuration phpunit.xml --coverage-clover test-reports/cov.xml && php prepare-coverage-report.php"
    }
}
